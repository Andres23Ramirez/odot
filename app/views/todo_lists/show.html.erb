<div class="todo_list_title"><h1><%= @todo_list.title %></h1>
</div>

<h2 class="contenido">
	<%= @todo_list.description %>
</h2>

<% if @todo_list.has_incompleted_items? %>
<h3 class="bordear">Incomplete Items:</h3>

<ul class="bordear">
  <% @todo_list.todo_items.incomplete.each do |todo_item| %>
  <li><%= todo_item.content %></li>
  <% end %>
</ul>
<% end %>

<% if @todo_list.has_completed_items? %>
<h3 class="bordear">Complete Items:</h3>

<ul class="bordear">
  <% @todo_list.todo_items.complete.each do |todo_item| %>
  <li><%= todo_item.content %></li>
  <% end %>
</ul>
<% end %>

<%= link_to 'Edit', edit_todo_list_path(@todo_list) %> |
<%= link_to 'Back', todo_lists_path %>